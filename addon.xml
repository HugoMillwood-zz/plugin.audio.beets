<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.beets"
       name="Beets"
       version="0.1"
       provider-name="Hugo Millwood">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="beets.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en"></summary>
    <description lang="en">Beets allows you to stream music from a beets server via it's "web" plugin (must be running).</description>
  </extension>
</addon>

